<%= form_for [@user, @idea] do |f| %>
  <%= f.label :category %>
  <%= f.collection_select(:category_id, @categories, :id, :name) %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :images %>
  <%= f.collection_select(:image_id, @images, :id, :title, multiple: true) %>
  <%= f.submit 'Save Idea' %>
<% end %>
