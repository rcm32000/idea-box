<%= form_for [@user, @idea] do |f| %>
  <%= f.label :category %>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :image %>
  <%= f.collection_select(:image_id, Image.all, :id, :title) %>
  <%= f.submit 'Save Idea' %>
<% end %>
