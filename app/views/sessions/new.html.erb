<div class='login-form'>
  <h2>Please enter your login information</h2></br>
  <%= form_tag login_path, class: 'login_form' do %>
    <p><%= label_tag :username %></p>
    <p><%= text_field_tag :username %></p></br>
    <p><%= label_tag :password %></p>
    <p><%= password_field_tag :password %></p></br>
    <%= submit_tag 'Login' %>
  <% end %>
</div>
